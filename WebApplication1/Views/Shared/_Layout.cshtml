@using WebApplication1.Models
<!DOCTYPE html>
<html>
<head>
    <title>Trang chủ</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css">
    <link rel="stylesheet" href="~/Content/Assets/CSS/style.css" />
</head>
<body>
    <!-- ------------thanh menu------------ -->
    <header class="">
        <div class="">
            <a href="~/">
                <button class="btn btn-collapse float-left">
                    <span class="logo-symbol">IT</span>
                    <span class="logo-text">NEWS</span>
                </button>
            </a>
            <button id="collapseBtn" name="btnCollapse" class="btn btn-collapse float-right">
                <i id="collapseIcon" class="fas fa-bars"></i>
            </button>
        </div>
    </header>
    <nav id="wrapper" class="wrapper">
        <form action="@Url.Action(actionName: "Search", controllerName: "Home")" method="get" class="text-right">
            <input type="text" name="keyword" value="@ViewBag.keyword" class="search-input" placeholder="Nhập nội dung tìm kiếm">
            <button class="btn btn-search">
                <i class="fas fa-search"></i>
            </button>
        </form>
        <ul>
            <a id="a-home" href="@Url.Action(actionName: "Index", controllerName: "Home")">
                @if ("home" == ViewBag.currentP.ToString())
                {<li class="active">Trang chủ</li>}
                else
                {<li>Trang chủ</li>}
            </a>
            @foreach (Topic item in ViewBag.loaitin)
            {
                <a href="@Url.Action(
                    actionName: "LoaiTin",
                    controllerName: "Home",
                    routeValues: new {
                        maloaitin = item.PK_iMaTL
                    })">
                    @if (item.PK_iMaTL.ToString() == ViewBag.currentP.ToString())
                    {<li class="active">@item.STenTheLoai</li> }
                else
                {<li>@item.STenTheLoai</li>}
                </a>
            }
        </ul>
    </nav>
    <!-- ------------end thanh menu------------ -->
    <!-- ------------body------------ -->
    <div id="body">
        @RenderBody()
        <span class="text-bold" id="bvdd">Bài viết vừa đọc: </span><a class="text-bold" id="bvddlink" href=""></a>
    </div>
    <!-- ------------end body------------ -->

    <!-- ------------toolbox------------ -->
    <div class="view-count">
        <a href="#body" id="btn-to-top" class="hidden" title="Trở về đầu trang">
            <i class="fas fa-arrow-up"></i>
        </a>
        <div title="Bạn đã truy cập trang này @AppState["soluottruycap"] lần"><i class="fas fa-eye"></i> @AppState["soluottruycap"]</div>
    </div>
    <!-- ------------end toolbox------------ -->

    <!-- ------------footer------------ -->
    <footer class="footer">
        <div class="footer-content">
            <div class="text-center">
                Copyright © 2020 IT NEWS. All Rights Reserved
            </div>
            <ul>
                @foreach (Topic item in ViewBag.loaitin)
                {
                    <li>
                        <a href="@Url.Action(
                        actionName: "LoaiTin",
                        controllerName: "Home",
                        routeValues: new {
                            maloaitin = item.PK_iMaTL
                        })">
                            @item.STenTheLoai
                        </a>
                    </li>
                }
            </ul>
        </div>
    </footer>
    <!-- ------------end footer------------ -->
    <script src="~/Content/Assets/JS/style.js"></script>
</body>

</html>
