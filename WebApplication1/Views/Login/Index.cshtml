
@{
    ViewBag.Title = "Login";
    var username = "";
    var password = "";
    if (Request.Cookies.Get("username") != null)
    {
        username = Request.Cookies["username"].Value;
    }
    if (Request.Cookies.Get("password") != null)
    {
        password = Request.Cookies["password"].Value;
    }

}
<div id="body">
    <form action="~/Login/check_login" method="post" class="login-box">
        <h1>IT NEWS</h1>
        <div class="textbox">
            <i class="fa fa-user" aria-hidden="true"></i>
            <input type="text" name="Username" placeholder="Tên tài khoản" value="@username">
        </div>
        <div class="textbox">
            <i class="fa fa-lock" aria-hidden="true"></i>
            <input type="password" name="Password" placeholder="Mật khẩu" value="@password">
        </div>
        <div>
            <i><input class="check-box" type="checkbox" name="Rememberpassword" id="rmpw"></i>
            <label for="rmpw">Nhớ mật khẩu</label>
        </div>
        <input class="btn" type="submit" name="" value="Đăng nhập">
    </form>
</div>
<script>
    var message = window.location.search.substr(1).substring(7);
    if (message.length > 0) {
        console.log(message);
        if (message == "true" || message == "True") {
            alert("Đổi mật khẩu thành công! Hãy đăng nhập lại!");
        }
        else {
            alert("Đổi mật khẩu không thành công");
        }
    }
</script>


